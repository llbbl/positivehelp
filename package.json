{
	"name": "positivehelp",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@10.12.1",
	"engines": {
		"node": ">=20.0.0"
	},
	"resolutions": {
		"dom-accessibility-api": "0.5.16",
		"picomatch": "2.3.1"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "^0.25.0"
		}
	},
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"vercel-build": "pnpm db:migrate && next build",
		"start": "pnpm db:migrate && next start",
		"lint": "next lint",
		"db:generate": "drizzle-kit generate --config drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
		"db:reset": "drizzle-kit reset --config drizzle.config.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"check-file": "node scripts/check-file.js",
		"bun-tsc": "bun scripts/check-file.js",
		"node-tsc": "node scripts/check-file.js",
		"delete-message": "tsx scripts/delete-message.ts"
	},
	"dependencies": {
		"@babel/helpers": "^7.28.6",
		"@clerk/nextjs": "^6.36.8",
		"@libsql/client": "^0.15.15",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-toast": "^1.2.15",
		"@tanstack/react-table": "^8.21.3",
		"better-sqlite3": "^12.6.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.1",
		"lucide-react": "^0.563.0",
		"next": "16.1.5",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"winston": "^3.19.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@jest/globals": "^30.2.0",
		"@next/env": "^16.1.6",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.2.1",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"drizzle-kit": "^0.31.8",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"ts-jest": "^29.4.6",
		"tsx": "^4.21.0",
		"typescript": "^5"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.ts"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/$1"
		},
		"transform": {
			"^.+\\.(ts|tsx)$": [
				"ts-jest",
				{
					"tsconfig": {
						"jsx": "react-jsx"
					}
				}
			]
		}
	}
}