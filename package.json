{
  "name": "positivehelp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "resolutions": {
    "dom-accessibility-api": "0.5.16",
    "picomatch": "2.3.1"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "vercel-build": "pnpm db:migrate && next build",
    "start": "pnpm db:migrate && next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:reset": "drizzle-kit reset --config drizzle.config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-file": "node scripts/check-file.js",
    "bun-tsc": "bun scripts/check-file.js",
    "node-tsc": "node scripts/check-file.js"
  },
  "dependencies": {
    "@babel/helpers": "^7.27.1",
    "@clerk/nextjs": "^6.31.9",
    "@libsql/client": "^0.15.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-table": "^8.21.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "esbuild": "^0.25.4",
    "lucide-react": "^0.542.0",
    "next": "15.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@next/env": "^15.5.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "drizzle-kit": "^0.31.1",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "30.0.0-beta.3",
    "postcss": "^8",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx"
          }
        }
      ]
    }
  }
}
